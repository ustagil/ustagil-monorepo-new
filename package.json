{
  "name": "my-repo",
  "packageManager": "yarn@3.4.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts/*"
  ],
  "scripts": {
    "dev": "turbo run --concurrency=4 dev",
    "dev:ci": "turbo run --concurrency=4 dev -- --maxWorkers=2 --forceExit",
    "build": "turbo run --concurrency=4 build",
    "build:ci": "turbo run --concurrency=4 build -- --maxWorkers=2 --forceExit",
    "start": "turbo run --concurrency=4 start",
    "start:ci": "turbo run --concurrency=4 start -- --maxWorkers=2 --forceExit",
    "clean": "turbo run clean",
    "clean:rollup:cache": "turbo run clean:rollup:cache",
    "clean:full": "turbo run clean && yarn cache clean && rm -rf node_modules",
    "clean:ci": "turbo run clean -- --maxWorkers=2 --forceExit",
    "coverage": "turbo run coverage --concurrency=1 -- --maxWorkers=1",
    "coverage:ci": "turbo run coverage --concurrency=1 -- --forceExit --maxWorkers=1",
    "format": "turbo run --concurrency=4 format",
    "format:ci": "turbo run --concurrency=4 format -- --maxWorkers=2 --forceExit",
    "lint": "turbo run --concurrency=4 lint",
    "lint:ci": "turbo run --concurrency=4 lint -- --maxWorkers=2 --forceExit",
    "test": "turbo run test",
    "test:ci": "turbo run test -- --forceExit",
    "postinstall": "husky install",
    "release": "yarn build && changeset publish",
    "version": "changeset version && yarn install"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/config-lerna-scopes": "^17.4.2",
    "@manypkg/cli": "^0.20.0",
    "husky": "^8.0.3",
    "turbo": "^1.8.3"
  }
}
