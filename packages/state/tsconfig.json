{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "esnext",
    "target": "ES6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2021"
    ],
    "sourceMap": true,
    // "jsx": "react-jsx",
    "composite": false,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    // "noUnusedLocals": false,
    // "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    // "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    // "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}